@model object

@{
    bool isUpdating = Model is BusinessObjects.Dto.NewsArticle.NewsArticleForUpdateDto;
    var formAction = isUpdating ? "Form" : "Form";
    ViewData["Title"] = isUpdating ? "Edit News Article" : "Create News Article";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3>@(isUpdating ? "Edit News Article" : "Create News Article")</h3>
        </div>
        <div class="card-body">
            <form asp-controller="NewsArticle" asp-action="@formAction" method="post">
                @if (isUpdating)
                {
                    <input type="hidden" asp-for="@(isUpdating ? ((BusinessObjects.Dto.NewsArticle.NewsArticleForUpdateDto)Model).NewsArticleId : (Guid?)null)" />
                }

                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input asp-for="@(isUpdating ? ((BusinessObjects.Dto.NewsArticle.NewsArticleForUpdateDto)Model).NewsTitle : ((BusinessObjects.Dto.NewsArticle.NewsArticleForCreationDto)Model).NewsTitle)" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Headline</label>
                    <input asp-for="@(isUpdating ? ((BusinessObjects.Dto.NewsArticle.NewsArticleForUpdateDto)Model).Headline : ((BusinessObjects.Dto.NewsArticle.NewsArticleForCreationDto)Model).Headline)" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Content</label>
                    <textarea asp-for="@(isUpdating ? ((BusinessObjects.Dto.NewsArticle.NewsArticleForUpdateDto)Model).NewsContent : ((BusinessObjects.Dto.NewsArticle.NewsArticleForCreationDto)Model).NewsContent)" class="form-control" rows="5" required></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Source</label>
                    <input asp-for="@(isUpdating ? ((BusinessObjects.Dto.NewsArticle.NewsArticleForUpdateDto)Model).NewsSource : ((BusinessObjects.Dto.NewsArticle.NewsArticleForCreationDto)Model).NewsSource)" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Status</label>
                    <select asp-for="@(isUpdating ? ((BusinessObjects.Dto.NewsArticle.NewsArticleForUpdateDto)Model).NewsStatus : ((BusinessObjects.Dto.NewsArticle.NewsArticleForCreationDto)Model).NewsStatus)" class="form-select">
                        <option value="Draft">Draft</option>
                        <option value="Published">Published</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="NewsArticle" asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-success">
                        @(isUpdating ? "Update" : "Create")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
